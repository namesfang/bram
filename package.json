{
	"name": "bram",
	"version": "1.0.0",
	"type": "module",
	"prisma": {
		"seed": "node --no-warnings --loader ts-node/esm ./prisma/seeds/main.ts"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:demo": "PUBLIC_BUILD_MODE='demo' vite build",
		"deploy": "npx prisma migrate deploy && npx prisma db pull && npx prisma db seed && npx prisma generate --sql",
		"mkdeploy": "./mkdeploy.sh",
		"pm2:start": "pm2 start ./ecosystem.config.cjs",
		"pm2:stop": "pm2 stop bram",
		"pm2:reload": "pm2 reload bram",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^22.10.1",
		"@types/qs": "^6.9.17",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"sass": "^1.82.0",
		"svelte": "^5.12.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@prisma/client": "^6.0.1",
		"@wangeditor/editor": "^5.1.23",
		"chart.js": "^4.4.7",
		"dayjs": "^1.11.13",
		"hash-wasm": "^4.12.0",
		"merge": "^2.1.1",
		"prisma": "^6.0.1",
		"qs": "^6.13.1",
		"radash": "^12.1.0",
		"svg-captcha": "^1.4.0",
		"ts-node": "^10.9.2",
		"uuid": "^11.0.3"
	}
}
